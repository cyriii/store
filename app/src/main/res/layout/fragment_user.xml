<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:task="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/c_2c"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo"
        task:text="用户名称" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/c_f7"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_change_psw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="@mipmap/ic_safe"
        android:drawableEnd="@mipmap/go"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/change_psw"
        android:textColor="#ff6b6b6b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/c_f7"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_psw" />

    <TextView
        android:id="@+id/tv_change_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="@mipmap/ic_set"
        android:drawableEnd="@mipmap/go"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/change_info"
        android:textColor="#ff6b6b6b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/v2" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/c_f7"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_info" />

    <TextView
        android:id="@+id/tv_abuout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="@mipmap/ic_about"
        android:drawableEnd="@mipmap/go"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/about"
        android:textColor="#ff6b6b6b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/v3" />
</android.support.constraint.ConstraintLayout>